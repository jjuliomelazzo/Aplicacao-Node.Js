<h2>Lista de Categorias: </h2>
<hr>

<a href="/admin/postagens/add"><button class="btn btn-success">Nova Postagem</button></a>

{{#each }}
    <div class="card mt-4" >
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>Descrição: {{descricao}}</p>
            <small>Data: {{data}}</small><br>
            <small>Categoria: {{categoria.nome}}</small><br>
            <a href="/admin/postagens/edit/{{_id}}">
                <button class="btn btn-success mt-3">Editar Postagem</button>
            </a>
        </div>
    </div>
{{else}}
    <p>Nenhum postagem registrada!</p>
{{/each}}